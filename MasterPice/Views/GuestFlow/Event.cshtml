<body class="rbt-header-sticky">

    <div id="my_switcher" class="my_switcher">
        <ul>
            <li>
                <a href="javascript: void(0);" data-theme="light" class="setColor light">
                    <img src="~/assets/images/about/sun-01.svg" alt="Sun images"><span title="Light Mode"> Light</span>
                </a>
            </li>
            <li>
                <a href="javascript: void(0);" data-theme="dark" class="setColor dark">
                    <img src="~/assets/images/about/vector.svg" alt="Vector Images"><span title="Dark Mode"> Dark</span>
                </a>
            </li>
        </ul>
    </div>
    <a class="close_side_menu" href="javascript:void(0);"></a>

    <div class="rbt-page-banner-wrapper">
        <!-- Start Banner BG Image  -->
        <div class="rbt-banner-image"></div>
        <!-- End Banner BG Image  -->
        <div class="rbt-banner-content">

            <!-- Start Banner Content Top  -->
            <div class="rbt-banner-content-top">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-12">
                            <!-- Start Breadcrumb Area  -->
                            <ul class="page-list">
                                <li class="rbt-breadcrumb-item"><a href="index.html">Home</a></li>
                                <li>
                                    <div class="icon-right"><i class="feather-chevron-right"></i></div>
                                </li>
                                <li class="rbt-breadcrumb-item active">All Event</li>
                            </ul>
                            <!-- End Breadcrumb Area  -->

                            <div class=" title-wrapper">
                                <h1 class="title mb--0">All Event</h1>
                                <a href="#" class="rbt-badge-2">
                                    <div class="image">🎉</div> @ViewBag.countevent Events
                                </a>
                            </div>
                            <p class="description">
                                A simple event for beginner designers who want to become real unicorns.
                                You’ll learn the basics, build your skills, and meet awesome people like you.
                                No pressure, just creativity, support, and good vibes.
                            </p>
                        </div>
                    </div>
                </div>
            </div>
            <!-- End Banner Content Top  -->
        </div>
    </div>

    <div class="rbt-counterup-area rbt-section-overlayping-top rbt-section-gapBottom">
        <div class="container">
            <div class="row g-5">
                @foreach(var s in Model){
                    <!-- Start Single Event  -->
                    <div class="col-lg-4 col-md-6 col-12">
                        <div class="rbt-card event-grid-card variation-01 rbt-hover">
                            <div class="rbt-card-img">
                                <a asp-action="event_detailed" asp-controller="GuestFlow" asp-route-id="@s.EventId">
                                    <img src="@s.EventCover" alt="Card image">
                                    <div class="rbt-badge-3 bg-white">
                                        <span>@s.StartDate.Month Jan</span>
                                        <span>@s.StartDate.Year</span>
                                    </div>
                                </a>
                            </div>
                            <div class="rbt-card-body">
                                <ul class="rbt-meta">
                                    <li><i class="feather-map-pin"></i>@s.Location</li>
                                    <li><i class="feather-clock"></i>@s.StartDate.TimeOfDay am - @s.EndDate.TimeOfDay</li>
                                </ul>
                                <h4 class="rbt-card-title">
                                    <a asp-action="event_detailed" asp-controller="GuestFlow" asp-route-id="@s.EventId">
                                        @s.Title
                                    </a>
                                </h4>

                                <div class="read-more-btn">
                                    <a class="rbt-btn btn-border hover-icon-reverse btn-sm radius-round" asp-action="event_detailed" asp-controller="GuestFlow" asp-route-id="@s.EventId">
                                        <span class="icon-reverse-wrapper">
                                            <span class="btn-text">Get Ticket</span>
                                            <span class="btn-icon"><i class="feather-arrow-right"></i></span>
                                            <span class="btn-icon"><i class="feather-arrow-right"></i></span>
                                        </span>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- End Single Event  -->
                }
            </div>
            <div class="row">
                <div class="col-lg-12 mt--60">
                    <nav>
                        <ul class="rbt-pagination">
                            <li><a href="#" aria-label="Previous"><i class="feather-chevron-left"></i></a></li>
                            <li><a href="#">1</a></li>
                            <li class="active"><a href="#">2</a></li>
                            <li><a href="#">3</a></li>
                            <li><a href="#" aria-label="Next"><i class="feather-chevron-right"></i></a></li>
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    </div>

    <div class="rbt-separator-mid">
        <div class="container">
            <hr class="rbt-separator m-0">
        </div>
    </div>
</body>